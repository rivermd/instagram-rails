<div class="row">
    <div class="col">
      <div class="py-4 px-4">
        <div class="mb-4">
          <%= link_to root_path do %>
            <%= image_tag "ig-logo-home.png", width: "115", height: "37"%>
          <% end %>
        </div>
        <div class="mb-4">
            <%= link_to "", data: {"bs-toggle" => "modal", "bs-target" => "#new-post-modal"}, class: "sidebar-link" do %>
              <div class="d-flex align-items-center">
              </div>
            <%= image_tag "icons/more.png", width: "24", class: "block m-3"%>
            Create
            <% end %>
        </div>
        <div>
          <%= button_to "Log Out", destroy_user_session_path, :method => :delete %>
        </div>            
      </div>
    </div>
    <div class="col-7">
      2 of 3 (wider)
    </div>
    <div class="col-3">
      3 of 3
    </div>
  </div>

<!-- Modal -->
<div class="modal fade" id="new-post-modal" tabindex="-1" aria-labelledby="new-post-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header justify-content-center">
        <p class="modal-title fs-6 fw-semibold " id="new-post-modal-label">Create new post</p>
        </div>
          <div class="modal-body d-flex justify-content-center align-items-center">
                <div class="pt-5 py-5" style="margin-left: auto; margin-right: auto; text-align: center;">
                  <%= image_tag "icons/gallery.png", width: "96", class: "block mb-3" %>
                  <p class="fs-5">Drag photos and videos here</p>

                  <%= form_with model: Post.new, data: { controller: "new-post-form" } do |f|%>
                    <%= link_to "Select from gallery", "", data: {action: "click->new-post-form#selectFile"}, id:"post-select-file-button", class: "btn btn-primary insta-primary" %>

                    <%=f.file_field :photo, data: {"new-post-form-target": "photoFile", action: "change->new-post-form#submitForm"}, class: "d-none"%>
                  <%end%>
                </div>
            </div>

        </div>
      
      </div>
    </div>
  </div>
</div>
