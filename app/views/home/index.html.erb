<div class="vh-100 d-flex justify-content-center align-items-center">
    <div>
        <div class="card p-4 mb-3">
                <div class="card-body" style="width: 23rem;">
                <div class="instagram-logo-link"></div>
                <p class= "text-center text-body-tertiary fs-5 fw-semibold">Sign up to see photos and videos from your friends</p>
                
                <div class="d-flex justify-content-center">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-100" }) do |f| %>
                        <div class="mb-3">
                            <%= f.email_field :email, placeholder: "Phone number, username, or email" ,autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>
        
                        <div class="mb-3">
                            <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
                        </div>
        
                        <% if devise_mapping.rememberable? %>
                            <div class="form-check">
                            <%= f.check_box :remember_me, class:"form-check-input" %>
                            <%= f.label :remember_me, class:"form-check-label" %>
                            </div>
                        <% end %>
        
                        <div class="actions">
                            <%= f.submit "Log in" %>
                        </div>
                        <% end %>
                </div>

                <hr>
                    
                <div class="d-flex justify-content-center">
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                </div>


                </div>
        </div>

        <div class="card py-2">
            <div class="card-body" style="width: 23rem;">
                <p class= "mb-0 text-center fs-8">Don't have an account? <%= link_to "Sign Up", new_user_registration_path %></p>
            </div>
        </div>
    </div>
</div>

